<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#DDDDDE"

    android:layout_height="wrap_content">
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="50dp"
    android:src="@drawable/home"
    android:id="@+id/userimageQues"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_height="50dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dsdddddd"
        android:id="@+id/usernameQuestion"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="#000"
        android:textSize="32sp"
        android:layout_toRightOf="@id/userimageQues"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Question "
        android:textSize="24sp"
        android:id="@+id/questionMainDialog"
        android:layout_below="@id/usernameQuestion"/>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textSize="18sp"
      android:id="@+id/wordCounter"
       android:gravity="right"
       android:layout_below="@id/questionMainDialog"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Description"
        android:textSize="24sp"
        android:id="@+id/DescriptionDialog"
        android:layout_below="@id/wordCounter"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/DiscriptionCounter"
        android:gravity="right"
        android:layout_below="@id/DescriptionDialog"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Post"
        android:textColor="#000"
        android:paddingRight="16dp"
        android:id="@+id/PostQuestion"
        android:gravity="right"
        android:textStyle="bold"
        android:layout_below="@id/DiscriptionCounter"/>

</RelativeLayout>